<div class="jumbotron text-center">
  <h1>Request a password</h1>
  <div class="form-group col-md-4 col-md-offset-4">
    <%= simple_form_for @password_request do |f| %>
      <%= f.input :email, label: false, placeholder: "email" %>
      <%= f.submit 'Submit', class: 'button button-main btn btn-primary' %>
    <% end %>
  </div>
</div>
